<UserControl x:Class="ScriptedGifBuilder.Presentation.Controls.FlagsEnumerationEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="ThisControl"
             MinHeight="50">
    <ListBox ItemsSource="{Binding Items, ElementName=ThisControl}">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <CheckBox IsChecked="{Binding IsChecked}" Content="{Binding Name}"/>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>
